<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dip"
    android:background="#B6E7FC">

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="220dp"
        android:background="#1E91E9"
        android:onClick="onClick"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/User_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/pswd_plain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dip"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="120dip"
        android:layout_marginEnd="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="30dip"
        android:text="User: "
        android:textColor="#FC030303"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/user_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="120dip"
        android:layout_toRightOf="@id/User_plain"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/pswd_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/User_plain"
        android:layout_alignTop="@id/User_plain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="90dip"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="30dip"
        android:text="Password: "
        android:textColor="#050505"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/pswd_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user_edit"
        android:layout_alignTop="@id/user_edit"
        android:layout_marginTop="90dip"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="30dip"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="45dp" />
</RelativeLayout>